{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true
  },
  "include": ["**/*.ts"],
  "references": [
    { "path": "../../packages/@aws-cdk/cloudformation-diff" },
    { "path": "../../packages/@aws-cdk/cx-api" }
  ]
}
