{
  "name": "pkglint",
  "version": "1.0.0",
  "private": true,
  "description": "Validate and fix package.json files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/awslabs/aws-cdk"
  },
  "pkglint": {
    "ignore": true
  },
  "bin": {
    "pkglint": "bin/pkglint"
  },
  "scripts": {
    "build": "tsc -b && tslint -p . && chmod +x bin/pkglint",
    "build+test": "npm run build",
    "build+test+package": "npm run build",
    "watch": "tsc -b -w",
    "lint": "tsc -b && tslint -p . --force"
  },
  "keywords": [
    "aws",
    "cdk",
    "constructs",
    "s3"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/fs-extra": "^7.0.0",
    "@types/semver": "^6.0.0",
    "@types/yargs": "^13.0.0"
  },
  "dependencies": {
    "case": "^1.6.1",
    "colors": "^1.3.3",
    "fs-extra": "^8.0.1",
    "semver": "^6.1.1",
    "yargs": "^13.2.4"
  }
}
