{
  "name": "pkglint",
  "version": "0.7.2-beta",
  "private": true,
  "description": "Validate and fix package.json files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/awslabs/aws-cdk"
  },
  "pkglint": {
    "ignore": true
  },
  "bin": {
    "pkglint": "bin/pkglint"
  },
  "scripts": {
    "prepare": "tsc && tslint -p . && chmod +x bin/pkglint",
    "watch": "tsc -w",
    "lint": "tsc && tslint -p . --force"
  },
  "keywords": [
    "aws",
    "cdk",
    "constructs",
    "s3"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/fs-extra": "^4.0.8",
    "@types/yargs": "^8.0.3"
  },
  "dependencies": {
    "fs-extra": "^4.0.2",
    "yargs": "^9.0.1"
  }
}
