{
  "name": "cdk-build-tools",
  "private": true,
  "version": "0.9.2",
  "description": "Tools package with shared build scripts for CDK packages",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/aws-cdk.git"
  },
  "bin": {
    "cdk-build": "bin/cdk-build",
    "cdk-watch": "bin/cdk-watch",
    "cdk-test": "bin/cdk-test",
    "cdk-package": "bin/cdk-package"
  },
  "scripts": {
    "build": "tsc && tslint -p . && chmod +x bin/cdk-build && chmod +x bin/cdk-test && chmod +x bin/cdk-watch && pkglint",
    "watch": "tsc -w",
    "pkglint": "pkglint -f"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com",
    "organization": true
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/yargs": "^8.0.3",
    "pkglint": "^0.9.2"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "jsii": "^0.7.6",
    "jsii-pacmak": "^0.7.6",
    "merkle-build": "^0.9.2",
    "typescript": "^3.0.1",
    "yargs": "^9.0.1"
  },
  "keywords": [
    "aws",
    "cdk"
  ],
  "homepage": "https://github.com/awslabs/aws-cdk"
}
