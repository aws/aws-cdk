{
  "name": "simple-resource-bundler",
  "version": "0.7.0",
  "description": "Command-line tool to embed resources into JS libraries",
  "main": "bundler.js",
  "types": "bundler.d.ts",
  "bin": {
    "simple-resource-bundler": "./simple-resource-bundler"
  },
  "scripts": {
    "prepare": "tsc && chmod +x ./simple-resource-bundler && tslint -p . && pkglint",
    "lint": "tsc && tslint *.ts --force",
    "watch": "tsc -w",
    "pkglint": "pkglint -f"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/fs-extra": "^4.0.8",
    "@types/yargs": "^8.0.3",
    "pkglint": "^0.7.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.2",
    "source-map-support": "^0.5.6",
    "yargs": "^9.0.1"
  },
  "repository": {
    "url": "git://github.com/awslabs/aws-cdk",
    "type": "git"
  },
  "keywords": [
    "aws",
    "cdk"
  ]
}
