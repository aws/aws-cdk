{
    "compilerOptions": {
        "target":"ES2018",
        "lib": ["es2018"],
        "module": "CommonJS",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "composite": true,
        "incremental": true
    },
    "include": ["**/*.ts" ],
    "exclude": ["node_modules"]
}
