{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["es2018"],
      "strict": true,
      "alwaysStrict": true,
      "declaration": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "composite": true,
      "incremental": true
    },
    "include": ["**/*.ts"]
  }
