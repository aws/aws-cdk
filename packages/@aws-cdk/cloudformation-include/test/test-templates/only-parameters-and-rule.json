{
  "Parameters": {
    "Env": {
      "Type": "String"
    },
    "Subnets": {
      "Type": "List<AWS::EC2::Subnet::Id>"
    }
  },
  "Rules": {
    "TestVpcRule": {
      "RuleCondition": {
        "Fn::Contains": [
          ["test", "pre-prod", "preprod"],
          { "Ref":  "Env" }
        ]
      },
      "Assertions": [
        {
          "Fn::EachMemberIn": [
            { "Fn::ValueOfAll": ["AWS::EC2::Subnet::Id", "VpcId"] },
            { "Fn::ValueOf": ["Subnets", "VpcId"] }
          ]
        }
      ]
    }
  }
}
