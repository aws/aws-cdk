{
  "Parameters": {
    "MyParam": {
      "Type": "String"
    }
  },
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { 
          "Fn::Sub": [ 
            "${MyParam}", 
            { 
              "MyParam": { "Ref" : "MyParam" }
            } 
          ]
        }
      }
    }
  }
}
