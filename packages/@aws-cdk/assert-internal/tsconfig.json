{
    "compilerOptions": {
        "target":"es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true
    },
    "include": ["**/*.ts" ],
    "exclude": ["node_modules"],
    "references": [
        { "path": "../core" },
        { "path": "../cx-api" },
        { "path": "../cfnspec" },
        { "path": "../cloudformation-diff" }
    ]
}
